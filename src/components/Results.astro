---
import SectionHeader from "./SectionHeader.astro";
import Card from "./Card.astro";

const results = [
    { icon: "users", title: "Más reuniones" },
    { icon: "filter", title: "Leads filtrados y más cierres" },
    { icon: "hourglass", title: "Más tiempo productivo en dar el servicio" },
    { icon: "graph", title: "Más facturación" },
];
---

<section id="resultados" class="section">
    <!-- Graphic Element: Bottom center glow -->
    <div class="graphic-glow glow-bottom"></div>

    <div class="container">
        <div class="fade-up">
            <SectionHeader
                title="Resultados"
                subtitle="Lo que obtienes con nuestro sistema."
            />
        </div>
        <div class="grid fade-up delay-200">
            {
                results.map((r) => (
                    <Card icon={r.icon} title={r.title} centered={true} />
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        position: relative;
        padding: 200px 0;
    }

    .glow-bottom {
        bottom: -100px;
        left: 50%;
        transform: translateX(-50%);
        width: 800px;
        height: 400px;
        background: radial-gradient(
            circle,
            rgba(37, 99, 235, 0.15) 0%,
            transparent 70%
        );
        filter: blur(100px);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 32px;
    }
</style>
