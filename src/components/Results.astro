---
import SectionHeader from "./SectionHeader.astro";
import Card from "./Card.astro";
import { results } from "../data/content";
---

<section id="resultados" class="section">
    <div class="graphic-glow glow-bottom"></div>

    <div class="container">
        <div class="fade-up">
            <SectionHeader
                title="Resultados"
                subtitle="Lo que obtienes con nuestro sistema."
            />
        </div>
        <div class="grid fade-up delay-200">
            {
                results.map((r) => (
                    <Card icon={r.icon} title={r.title} centered={true} />
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        position: relative;
        padding: 200px 0;
    }

    .glow-bottom {
        bottom: -150px;
        left: 50%;
        transform: translateX(-50%);
        width: 1000px;
        height: 500px;
        background: radial-gradient(
            ellipse at center,
            rgba(37, 99, 235, 0.25) 0%,
            transparent 60%
        );
        filter: blur(120px);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 32px;
    }
</style>
