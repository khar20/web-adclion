---
import SectionHeader from "./SectionHeader.astro";
import Card from "./Card.astro";

const solutions = [
    {
        icon: "gears",
        title: "Sistema automatizado",
        desc: "Procesos que funcionan solos, 24/7.",
    },
    {
        icon: "chat",
        title: "IA conversacional",
        desc: "Interacciones naturales y efectivas.",
    },
    {
        icon: "graph",
        title: "Seguimiento inteligente",
        desc: "Ningún lead se queda atrás.",
    },
    {
        icon: "calendar",
        title: "Agenda cerrada",
        desc: "Agenda cerrada sin fricción.",
    },
];
---

<section id="solucion" class="section">
    <div class="dots-bg"></div>

    <div class="container">
        <div class="fade-up">
            <SectionHeader
                title="Nuestra Solución"
                subtitle="Tecnología diseñada para escalar."
            />
        </div>
        <div class="grid fade-up delay-200">
            {
                solutions.map((s) => (
                    <Card icon={s.icon} title={s.title} description={s.desc} />
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        position: relative;
        padding: 200px 0;
        overflow: hidden;
    }

    .dots-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: radial-gradient(#2563eb 1px, transparent 1px);
        background-size: 40px 40px;
        opacity: 0.1;
        mask-image: linear-gradient(
            to bottom,
            transparent,
            black 20%,
            black 80%,
            transparent
        );
        -webkit-mask-image: linear-gradient(
            to bottom,
            transparent,
            black 20%,
            black 80%,
            transparent
        );
        z-index: 0;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 32px;
    }
</style>
