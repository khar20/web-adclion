---
import SectionHeader from "./SectionHeader.astro";
import Card from "./Card.astro";

const problems = [
    {
        icon: "snowflake",
        title: "Leads fríos",
        desc: "Leads fríos por falta de atención.",
    },
    {
        icon: "clock",
        title: "Tiempo perdido",
        desc: "Horas desperdiciadas en tareas manuales.",
    },
    {
        icon: "search",
        title: "Seguimiento inexistente",
        desc: "Oportunidades perdidas por falta de contacto.",
    },
    {
        icon: "users",
        title: "Dependencia",
        desc: "Del equipo comercial o atención al cliente.",
    },
];
---

<section id="problemas" class="section">
    <div class="graphic-glow glow-left"></div>

    <div class="container">
        <div class="fade-up">
            <SectionHeader
                title="Problemas Comunes"
                subtitle="Lo que frena tu crecimiento hoy."
            />
        </div>
        <div class="grid fade-up delay-200">
            {
                problems.map((p) => (
                    <Card icon={p.icon} title={p.title} description={p.desc} />
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        position: relative;
        padding: 200px 0;
    }

    .glow-left {
        top: 30%;
        left: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(37, 99, 235, 0.08) 0%,
            transparent 70%
        );
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 32px;
    }
</style>
