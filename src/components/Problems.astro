---
import SectionHeader from "./SectionHeader.astro";
import Card from "./Card.astro";
import { problems } from "../data/content";
---

<section id="problemas" class="section">
    <div class="graphic-glow glow-left"></div>

    <div class="container">
        <div class="fade-up">
            <SectionHeader
                title="Problemas Comunes"
                subtitle="Lo que frena tu crecimiento hoy."
            />
        </div>
        <div class="grid fade-up delay-200">
            {
                problems.map((p) => (
                    <Card icon={p.icon} title={p.title} description={p.desc} />
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        position: relative;
        padding: 200px 0;
    }

    .glow-left {
        top: 50%;
        left: -20%;
        transform: translateY(-50%);
        width: 600px;
        height: 600px;
        background: radial-gradient(
            circle,
            rgba(37, 99, 235, 0.15) 0%,
            transparent 70%
        );
        filter: blur(100px);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 32px;
    }
</style>
