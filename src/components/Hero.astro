---
import { heroContent } from "../data/content";
---

<section class="hero">
    <div class="hero-bg">
        <div class="grid-pattern"></div>
        <div class="top-light"></div>
        <div class="top-light-core"></div>
    </div>
    <div class="container content">
        <h1 class="fade-up">
            {heroContent.titleStart}
            <span class="highlight">{heroContent.highlight}</span>
            {heroContent.titleEnd}
        </h1>
        <p class="subtitle fade-up delay-100">
            {heroContent.subtitle}
        </p>
        <div class="fade-up delay-200">
            <a
                href="#"
                onclick="Calendly.initPopupWidget({url: 'https://calendly.com/adclion-ia/30min'});return false;"
                class="btn"
            >
                {heroContent.cta} &rarr;
            </a>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding-top: 100px;
        text-align: center;
        overflow: hidden;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .grid-pattern {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.1) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 85%
        );
        -webkit-mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 85%
        );
    }

    .top-light {
        position: absolute;
        top: -10%;
        left: 50%;
        transform: translateX(-50%);
        width: 120%;
        height: 70vh;
        background: radial-gradient(
            ellipse at top,
            rgba(37, 99, 235, 0.4) 0%,
            rgba(7, 9, 16, 0) 70%
        );
        filter: blur(80px);
    }

    .top-light-core {
        position: absolute;
        top: -100px;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        max-width: 600px;
        height: 400px;
        background: radial-gradient(
            circle,
            rgba(96, 165, 250, 0.5) 0%,
            transparent 60%
        );
        filter: blur(70px);
    }

    .content {
        max-width: 900px;
        margin: 0 auto;
    }

    h1 {
        font-size: 4.5rem;
        margin-bottom: 32px;
        letter-spacing: -2px;
        line-height: 1.05;
        background: linear-gradient(to bottom right, #ffffff 30%, #9ca3af 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 40px rgba(255, 255, 255, 0.15);
    }

    .highlight {
        -webkit-text-fill-color: var(--accent-light);
        color: var(--accent-light);
        position: relative;
        text-shadow: 0 0 30px rgba(96, 165, 250, 0.6);
    }

    .highlight::after {
        content: "";
        position: absolute;
        width: 140%;
        height: 60%;
        bottom: 0px;
        left: -20%;
        background: rgba(37, 99, 235, 0.5);
        filter: blur(30px);
        z-index: -1;
        border-radius: 100%;
    }

    .subtitle {
        font-size: 1.35rem;
        color: var(--text-muted);
        margin-bottom: 56px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 3rem;
        }
        .hero {
            min-height: auto;
            padding: 180px 0 100px 0;
        }
        .top-light {
            height: 50vh;
            opacity: 0.8;
        }
    }
</style>
