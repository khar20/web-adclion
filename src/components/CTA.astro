---
import { ctaContent } from "../data/content";
---

<section id="demo" class="cta-section">
    <div class="texture"></div>
    <div class="glow-overlay"></div>
    <div class="container fade-up">
        <h2><Fragment set:html={ctaContent.title} /></h2>
        <div class="btn-container">
            <!-- Calendly Button -->
            <a
                href="#"
                onclick="Calendly.initPopupWidget({url: 'https://calendly.com/adclion-ia/30min'});return false;"
                class="btn btn-white"
            >
                {ctaContent.button}
            </a>
        </div>
    </div>
</section>

<style>
    .cta-section {
        position: relative;
        background-color: var(--primary-blue);
        text-align: center;
        padding: 180px 20px;
        background-image: radial-gradient(
            circle at center,
            #3b82f6 0%,
            #1d4ed8 100%
        );
        overflow: hidden;
    }

    .texture {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255, 255, 255, 0.15) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.15) 1px,
                transparent 1px
            );
        background-size: 60px 60px;
        opacity: 0.5;
    }

    .glow-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at top,
            rgba(255, 255, 255, 0.2) 0%,
            transparent 70%
        );
    }

    h2 {
        font-size: 3.5rem;
        margin-bottom: 48px;
        color: white;
        font-weight: 700;
        position: relative;
        z-index: 2;
        text-shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
    }

    .btn-container {
        margin-top: 24px;
        position: relative;
        z-index: 2;
    }

    .btn-white {
        padding: 18px 40px;
        font-size: 1.2rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 768px) {
        h2 {
            font-size: 2.2rem;
        }
        .cta-section {
            padding: 120px 20px;
        }
    }
</style>
